[
  {
    ".modal": {
      "position": "fixed",
      "top": 0,
      "left": 0,
      "width": "100%",
      "height": "100%",
      "display": "flex",
      "justify-content": "center",
      "align-items": "center",
      "background": "rgba(0, 0, 0, 0.6)"
    }
  },
  {
    ".modal__content": {
      "width": "50%",
      "aspect-ratio": "2.5/1",
      "background": "linear-gradient(135deg, #4f54ec, #070b7e, black)",
      "color": "#fff"
    }
  },
  {
    ".modal__header": {
      "display": "flex",
      "justify-content": "space-between"
    }
  }
]
